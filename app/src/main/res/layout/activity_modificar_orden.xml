<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModificarOrdenActivity">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="Modificar Orden"
        android:textAlignment="center"
        android:textColor="#1325DF"
        android:textSize="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="ID de la orden"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="397dp"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <Button
        android:id="@+id/btnModificarA単adirT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A単adir Taco(s)"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="286dp" />

    <Button
        android:id="@+id/btnModificarA単adirB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A単adir Bebida(s)"
        tools:layout_editor_absoluteX="222dp"
        tools:layout_editor_absoluteY="286dp" />

    <Button
        android:id="@+id/btnModificarQuitarT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quitar Taco(s)"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="389dp" />

    <Button
        android:id="@+id/btnModificarQuitarB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quitar Bebida(s)"
        tools:layout_editor_absoluteX="222dp"
        tools:layout_editor_absoluteY="389dp" />

    <Button
        android:id="@+id/btnEliminarOrden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar Orden"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="498dp" />

    <Button
        android:id="@+id/btnVolverMenuModificar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:text="Volver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>